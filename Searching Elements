#include<stdio.h>
#include<stdbool.h>
int main(){
    int arr[] = {10,20,30,40,50};
    int target = 30;
    int n = 5; //size of array
    bool found = false;
    //Linear search using traversal
    for (int i = 0; i<n; i++){
        if(arr[i] == target){
            found = true;
            break;
        }
    }
    if(found){
        printf("Element Found!");
    }else{
        printf("Element Not Found!");
    }
    return 0;
}


//USING USER INPUT
#include<stdio.h>
#include<stdbool.h>
int main(){
    int arr[50];
    int target;
    int size;
    printf("Enter The Size Of Array: ");
    scanf("%d",&size);
    printf("Enter The Elements:\n");
    for(int i = 0; i<size; i++){
        scanf("%d",&arr[i]);
    }
    printf("Enter the Traget Element: ");
    scanf("%d",&target);
    bool found = false;
    //Linear search using traversal
    for (int i = 0; i<size; i++){
        if(arr[i] == target){
            found = true;
            break;
        }
    }
    if(found){
        printf("Element Found!");
    }else{
        printf("Element Not Found!");
    }
    return 0;
}
